@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
    html, body {
        height: 100%;
    }
    body {
        @apply bg-gray-50 text-gray-800 antialiased;
        font-family: Inter, ui-sans-serif, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
    }
}

@layer components {
    .site-hero {
        @apply bg-white rounded-lg shadow-md overflow-hidden;
    }

    .cta-btn {
        background: linear-gradient(90deg, var(--brand), var(--brand-dark));
        color: white;
        @apply px-6 py-2 rounded-full text-sm font-semibold shadow hover:opacity-95;
    }

    .card {
        @apply bg-white rounded-xl shadow p-6;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1rem;
    }
}

/* small helpers */
.site-footer a { @apply hover:text-gray-300 }

/* Responsive tweaks for hero spacing */
@media (min-width: 768px) {
    .hero-inner { @apply py-20 }
}
